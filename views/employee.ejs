<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script
      src="https://kit.fontawesome.com/2f5a0f3fc5.js"
      crossorigin="anonymous"
    ></script>
    <title>Hello World</title>
  </head>
  <body>
    <h1 class="text-center text-3xl py-8 font-bold">
      Employee List PT. Maju Mundur
    </h1>
    <div class="w-full mx-auto">
      <div class="max-w-3xl mx-auto">
        <a
          href="/add"
          class="bg-teal-400 hover:bg-teal-600 px-5 py-2 text-slate-50 rounded shadow-md mb-5 transition-all ease-in-out duration-300"
        >
          Add Student
        </a>
      </div>

      <table
        class="text-sm max-w-3xl mx-auto w-full text-left rtl:text-right mt-5"
      >
        <thead class="text-xs uppercase text-slate-50 bg-teal-600">
          <tr>
            <th scope="col" class="px-6 py-3">id</th>
            <th scope="col" class="px-6 py-3">Profile</th>
            <th scope="col" class="px-6 py-3">Name</th>
            <th scope="col" class="px-6 py-3">Email</th>
            <!-- <th scope="col" class="px-6 py-3">Gaji</th> -->
            <th scope="col" class="px-6 py-3">Action</th>
          </tr>
        </thead>
        <tbody>
          <% employees.forEach(list => { %>
          <tr class="border-b odd:bg-teal-50 even:bg-teal-100">
            <td class="px-6 py-4 text-slate-900"><%= list.id %></td>
            <td class="px-6 py-4 text-slate-900">
              <img
                src="<%= list.image %>"
                alt=""
                class="w-16 h-16 object-cover"
              />
            </td>
            <th
              scope="row"
              class="px-6 py-4 text-slate-900 font-medium whitespace-nowrap"
            >
              <%= list.name %>
            </th>
            <td class="px-6 py-4 text-slate-900"><%= list.email %></td>
            <!-- <td class="px-6 py-4 text-slate-900"><%= list.gaji%></td> -->
            <td class="px-6 py-4 text-slate-900">
              <span>
                <a
                  href="/<%= list.id%>/edit"
                  class="font-medium text-yellow-800 text-xl hover:underline"
                  ><i class="fa-solid fa-pen-to-square"></i
                ></a>
              </span>

              <span>
                <a
                  href="/<%= list.id%>/delete"
                  class="font-medium text-red-400 text-xl hover:underline"
                  ><i class="fa-solid fa-trash"></i
                ></a>
              </span>
            </td>
          </tr>
          <% } ) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
